<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/sequence_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[total_time]">
        </TextView>
        <EditText
            android:id="@+id/sequence_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[label]">
        </EditText>

        <!-- TODO: put add (+) button here -->
        <ImageView
            android:id="@+id/sequence_add_exercice"
            android:layout_gravity="center"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/ic_saved">
        </ImageView>

        <!-- TODO: On l'active aprÃ¨s on long tap -->
        <CheckBox
            android:id="@+id/sequence_selected"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </CheckBox>

        <!-- TODO: put display (->) button here
             TODO: button must change to point bottom (v) when clicked
        -->
        <ImageView
            android:id="@+id/sequence_display_list"
            android:layout_gravity="center"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/ic_right_arrow">
        </ImageView>

    </LinearLayout>

    <!-- TODO: Rajouter une liste d'exercices et l'afficher sur le click de sequence_display_list -->
    <ListView
        android:id="@+id/sequence_exercice_list"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </ListView>


</LinearLayout>