<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/seance_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[total_time]">
    </TextView>
    <EditText
        android:id="@+id/seance_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[label]">
    </EditText>

    <!-- TODO: put add (+) button here -->
    <ImageView
        android:id="@+id/seance_add_sequence"
        android:layout_gravity="center"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@mipmap/ic_saved">
    </ImageView>

    <!-- TODO: On l'active après on long tap -->
    <CheckBox
        android:id="@+id/seance_selected"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </CheckBox>

        <!-- TODO: put display (->) button here
             TODO: button must change to point bottom (v) when clicked
        -->
        <ImageView
            android:id="@+id/sequence_display_list"
            android:layout_gravity="center"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/ic_right_arrow">
        </ImageView>

    </LinearLayout>

    <!-- TODO: Rajouter une liste de sequences + rajouter le nombre de répétitions de chacune d'elle -->
    <ListView
        android:id="@+id/seance_sequence_list"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </ListView>

</LinearLayout>