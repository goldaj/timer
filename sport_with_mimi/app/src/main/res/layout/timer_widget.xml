<?xml version="1.0" encoding="utf-8"?>
<com.quiquicheandco.sportwithmimi.TimerWidget
    android:id="@+id/timer_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:id="@+id/timer_seance_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="[DEFAULT SEANCE NAME]">
        </TextView>
        <Button
            android:id="@+id/timer_modify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="MODIFY">
        </Button>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <EditText
            android:id="@+id/timer_hour_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="time"
            android:maxLength="2"
            android:text="hh">
        </EditText>
        <TextView
            android:id="@+id/timer_hour_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" : ">
        </TextView>
        <EditText
            android:id="@+id/timer_min_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="2"
            android:inputType="time"
            android:text="mm">
        </EditText>
        <TextView
            android:id="@+id/timer_min_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" : ">
        </TextView>
        <EditText
            android:id="@+id/timer_seconds_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="time"
            android:maxLength="2"
            android:text="ss">
        </EditText>
        <TextView
            android:id="@+id/timer_seconds_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="">
        </TextView>

        <!-- TODO: change start to stop on click -->
        <Button
            android:id="@+id/timer_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="START">
        </Button>
        <Button
            android:id="@+id/timer_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="RESET">
        </Button>
    </LinearLayout>

</com.quiquicheandco.sportwithmimi.TimerWidget>